#========== Js And Npm Aliases ==========
alias ni="npm init"
alias npmi="npm install"
alias npmr="npm run"
alias npmrs="npm run serve"
alias npmrd="npm run dev"

#========== Php And Composer Aliases ==========
alias pserver="sudo php -S localhost:1000"
alias ci="composer init"
alias creq="composer require"
alias cdump="composer dump-autoload"


#========== Mysql Aliases ==========
alias rootsql="sudo mysql -u root -p"
alias pmasql="sudo mysql -u pmauser -p"


#========== Laravel Aliases ==========

alias laravel="/home/xyder/.config/composer/vendor/bin/laravel"
alias pam="php artisan migrate"
alias pa="php artisan"
alias pas="php artisan serve"
alias pamfr="php artisan migrate:fresh"
alias pamfrseed="php artisan migrate:fresh --seed"

#========== Git Aliases ==========

alias gv="git --version"

#Daily Use Git And GitHub Communicate Aliases
alias gi="git init"
alias gs="git status"
alias ga="git add ."
alias gc="git commit -m"
alias gl="git log --oneline"
alias gr="git remote add origin"
alias grv="git remote -v"
alias grr="git remote remove origin"
alias grra="git remote set-url origin"
alias gp="git push origin"
alias gclone="git clone"

#Handling Git Commit
alias gcheck="git checkout"
alias grevert="git revert"
alias gcchange="git commit --amend"

#Git Branches
alias gbrcheck="git branch -a"
alias gbr="git branch"
alias gbrdelete="git branch -D"
alias gbrm="git merge"
alias gpodbr="git push origin --delete"
